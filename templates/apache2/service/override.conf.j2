[Unit]
{% if webserver_service_start_after_network_online %}
After=network-online.target
{% endif %}
{% if 'suexec' in webserver_modules_custom %}
After=nss-user-lookup.target
{% endif %}

[Service]
Restart=always
{% if webserver_apache2_limit_custom %}
LimitNOFILE={{ webserver_apache2_systemd_limit_nofiles }}
TasksMax={{ webserver_apache2_systemd_tasks_max }}
{% endif %}

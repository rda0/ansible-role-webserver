<VirtualHost *:80>
  Use {{ http.type }} {{ name }} http {{ server_name }}
{% if http.include_common %}
  Include /etc/apache2/sites-common/{{ name }}.conf
{% endif %}
</VirtualHost>

<VirtualHost *:443>
  Use {{ https.type }} {{ name }} https {{ server_name }}
{% if https.cert == '' %}
  Use EnableSSL
{% else %}
  Use EnableSSLCustom {{ https.cert }}
{% endif %}
{% if https.include_common %}
  Include /etc/apache2/sites-common/{{ name }}.conf
{% endif %}
</VirtualHost>

